<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/top_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lib_update_app_info_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/cue_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否升级到4.1.1版本？"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/hint_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1，xxxxxxxx\n2，ooooooooo"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />
            </ScrollView>


            <Button
                android:id="@+id/dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_10"
                android:background="@drawable/btn_updata_color"
                android:gravity="center"
                android:minHeight="43dp"
                android:text="@string/string_w30s_upgrade"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <!--<TextView-->
            <!--android:id="@+id/dialog_cancel"-->
            <!--android:textColor="#666666"-->
            <!--android:padding="@dimen/size_5"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:gravity="center"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="忽略更新"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:ignore="HardcodedText" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="1.5dp"
                android:layout_height="40dp"
                android:background="#D8D8D8" />

            <ImageView
                android:id="@+id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lib_update_app_close" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
