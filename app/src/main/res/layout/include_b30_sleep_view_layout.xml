<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:id="@+id/b30SleepLin"
    android:background="@drawable/b30_sport_chart_select"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="-15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:background="@drawable/fgm_home_sleep"
                android:layout_height="35dp" />


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/sleep"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#88d785"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>



            <TextView
                android:id="@+id/b30StartEndTimeTv"
                android:text=""
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:textColor="#88d785"
                android:layout_height="wrap_content" />



    </RelativeLayout>

    <com.example.bozhilun.android.b30.b30view.B30CusSleepView
        android:id="@+id/b30CusSleepView"
        app:awakeSleepColor="#fcd647"
        app:deepSleepColor="#b592d6"
        app:lightSleepColor="#a6a8ff"
        app:sleepViewHeight="180dp"
        android:layout_width="match_parent"
        android:layout_height="180dp" />


</LinearLayout>