<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/comment_b30_title_layout"/>

    <RelativeLayout
        android:id="@+id/defaultStyleRel"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="默认风格"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/style1Img"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/screen_style_check"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chang_white"/>


    <RelativeLayout
        android:id="@+id/Style1Rel"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="风格1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/style2Img"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/screen_style_check"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chang_white"/>

    <RelativeLayout
        android:id="@+id/Style2Rel"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="风格2"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/style3Img"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/screen_style_check"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chang_white"/>

</LinearLayout>